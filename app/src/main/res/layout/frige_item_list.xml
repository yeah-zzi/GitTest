<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="350dp"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/back"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:background="@drawable/fridge_food_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/img_background"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="@+id/back"
        app:layout_constraintLeft_toLeftOf="@+id/back"
        app:layout_constraintRight_toRightOf="@+id/back">
        <ImageView
            android:id="@+id/food_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:src="@drawable/healthy_food"
            android:layout_gravity="center" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="280dp"
        android:layout_height="3dp"
        android:background="#F3F3F3"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/img_background"
        app:layout_constraintLeft_toLeftOf="@id/back"
        app:layout_constraintRight_toRightOf="@id/back"/>

    <LinearLayout
        android:id="@+id/nametxt"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/spinner_background"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="@id/back"
        app:layout_constraintRight_toRightOf="@id/back"
        app:layout_constraintTop_toBottomOf="@id/img_background">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            android:layout_marginStart="15dp"/>
        <EditText
            android:id="@+id/search_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/counttxt"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/spinner_background"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/back"
        app:layout_constraintRight_toRightOf="@id/back"
        app:layout_constraintTop_toBottomOf="@+id/nametxt">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개수"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            android:layout_marginStart="15dp"/>
        <EditText
            android:id="@+id/search_food_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:background="@null"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            android:layout_marginStart="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/deadtxt"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:background="@drawable/spinner_background"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/back"
        app:layout_constraintRight_toRightOf="@id/back"
        app:layout_constraintTop_toBottomOf="@+id/counttxt">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유통기한"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            android:layout_marginStart="15dp"/>
        <EditText
            android:id="@+id/search_food_dead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            android:layout_marginStart="15dp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/calendar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/fridge_food_card"
        android:padding="1dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_calendar_month_24"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="@id/deadtxt"
        app:layout_constraintBottom_toBottomOf="@+id/deadtxt"
        app:layout_constraintTop_toTopOf="@id/deadtxt"/>



</androidx.constraintlayout.widget.ConstraintLayout>