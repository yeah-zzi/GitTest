<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back"
        android:layout_width="350dp"
        android:layout_height="420dp"
        android:background="@drawable/fridge_food_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/message1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="집밥대결 신청"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toTopOf="@+id/back"
        app:layout_constraintLeft_toLeftOf="@+id/back"
        app:layout_constraintRight_toRightOf="@+id/back"/>

    <ImageView
        android:id="@+id/image1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/add_fight"
        app:layout_constraintLeft_toLeftOf="@+id/back"
        app:layout_constraintRight_toRightOf="@+id/back"
        app:layout_constraintTop_toBottomOf="@id/message1" />

    <LinearLayout
        android:id="@+id/bar_1"
        android:layout_width="330dp"
        android:layout_height="2dp"
        android:layout_marginTop="107dp"
        android:background="#989898"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/image1"
        app:layout_constraintRight_toRightOf="@id/back"
        app:layout_constraintLeft_toLeftOf="@id/back"/>

    <ImageView
        android:id="@+id/friend_view"
        android:layout_width="270dp"
        android:layout_height="65dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/spinner_background"
        app:layout_constraintTop_toBottomOf="@id/bar_1"
        app:layout_constraintLeft_toLeftOf="@id/back"
        app:layout_constraintRight_toRightOf="@id/back" />

    <ImageView
        android:id="@+id/friend_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/food_squid"
        app:layout_constraintLeft_toLeftOf="@id/friend_view"
        app:layout_constraintTop_toTopOf="@id/friend_view"
        app:layout_constraintBottom_toBottomOf="@id/friend_view"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Hyerim"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/friend_img"
        app:layout_constraintTop_toTopOf="@id/friend_view"
        app:layout_constraintBottom_toBottomOf="@id/friend_view"/>

    <TextView
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="55dp"
        android:text="님과"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@id/back"
        app:layout_constraintTop_toTopOf="@id/friend_view"
        app:layout_constraintBottom_toBottomOf="@id/friend_view"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="80dp"
        android:text="7일간"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#CA2C2C"
        app:layout_constraintLeft_toLeftOf="@id/back"
        app:layout_constraintTop_toBottomOf="@id/friend_view"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="3dp"
        android:text="의 집밥대결"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#323232"
        app:layout_constraintLeft_toRightOf="@id/date"
        app:layout_constraintTop_toBottomOf="@id/friend_view"/>

    <ImageButton
        android:id="@+id/complete"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/switch_track_on"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/back"
        app:layout_constraintLeft_toLeftOf="@+id/back"
        app:layout_constraintRight_toRightOf="@+id/back"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="다음"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/complete"
        app:layout_constraintBottom_toBottomOf="@id/complete"
        app:layout_constraintLeft_toLeftOf="@id/complete"
        app:layout_constraintRight_toRightOf="@id/complete"/>

</androidx.constraintlayout.widget.ConstraintLayout>