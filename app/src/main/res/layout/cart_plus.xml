<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    //에뮬용

    <ImageView
        android:id="@+id/back"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:background="@drawable/fridge_food_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/img_background"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/white"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="@+id/back"
        app:layout_constraintLeft_toLeftOf="@+id/back"
        app:layout_constraintRight_toRightOf="@+id/back">
        <ImageView
            android:id="@+id/food_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:src="@drawable/healthy_food"
            android:layout_gravity="center" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="280dp"
        android:layout_height="3dp"
        android:background="#F3F3F3"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/img_background"
        app:layout_constraintLeft_toLeftOf="@id/back"
        app:layout_constraintRight_toRightOf="@id/back"/>

    <LinearLayout
        android:id="@+id/nametxt"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/spinner_background"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="@id/back"
        app:layout_constraintRight_toRightOf="@id/back"
        app:layout_constraintTop_toBottomOf="@id/img_background">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            android:layout_marginStart="15dp"/>
        <TextView
            android:id="@+id/search_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="토마토"
            android:textSize="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/counttxt"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/spinner_background"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/back"
        app:layout_constraintRight_toRightOf="@id/back"
        app:layout_constraintTop_toBottomOf="@+id/nametxt">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개수"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            android:layout_marginStart="15dp"/>
        <TextView
            android:id="@+id/search_food_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="15dp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/plusbtn"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:background="@drawable/fridge_type_bar"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/counttxt"
        app:layout_constraintLeft_toLeftOf="@id/back"
        app:layout_constraintRight_toRightOf="@id/back"/>
    <ImageView
        android:id="@+id/plusimg"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/pluskgl"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="@id/plusbtn"
        app:layout_constraintTop_toTopOf="@id/plusbtn"
        app:layout_constraintBottom_toBottomOf="@id/plusbtn"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품추가"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_marginStart="3dp"
        app:layout_constraintLeft_toRightOf="@+id/plusimg"
        app:layout_constraintTop_toTopOf="@id/plusbtn"
        app:layout_constraintBottom_toBottomOf="@id/plusbtn"/>

    <ImageButton
        android:id="@+id/cancel"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/lightgraycircld"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@id/back"
        app:layout_constraintLeft_toLeftOf="@id/back"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/cancel"
        app:layout_constraintBottom_toBottomOf="@id/cancel"
        app:layout_constraintLeft_toLeftOf="@id/cancel"
        app:layout_constraintRight_toRightOf="@id/cancel"/>

    <ImageButton
        android:id="@+id/complete"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/switch_track_on"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@id/back"
        app:layout_constraintRight_toRightOf="@+id/back"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="확인"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/complete"
        app:layout_constraintBottom_toBottomOf="@id/complete"
        app:layout_constraintLeft_toLeftOf="@id/complete"
        app:layout_constraintRight_toRightOf="@id/complete"/>
</androidx.constraintlayout.widget.ConstraintLayout>